<div class="container">
    <div class="row-cols-1">
        <h4>Importar temas</h4>
    </div>

    <div class="row">
        <div class="col-4">
            <label for="numerotema" class="form-label">Unidad</label>
            <input type="number" min="1" step="1" class="form-control" value="1" name="numerotema"
                   id="numerotema" required>
        </div>
        <div class="col">
            <label for="nombre" class="form-label">Nombre</label>
            <input type="text" class="form-control" name="nombre" id="nombre" required>
        </div>
    </div>

    <div class="row-cols-1  d-flex flex-row-reverse">
        <div class="col-auto d-flex flex-row-reverse p-3" >
            <div id="toolbar">
                <a id="remove" class="btn btn-danger" type="none">Eliminar</a>
                <a id="add" class="btn btn-primary" type="none">AÃ±adir nuevo</a>
            </div>
        </div>
    </div>

    <form class="needs-validation" action="/tema/lista-temas/{{idgrupo}}" method="POST" novalidate>
        <input type="hidden" id="valorTabla" name="valorTabla" value="{{listaFormateada}}">
        <!-- Grid para actividades -->
        <div class="row-cols-1">
            <div class="col-auto">
                <table id="table" data-toggle="table" data-toolbar="#toolbar" data-click-to-select="true"
                       data-search="true"
                       data-advanced-search="true" data-filter-control="true" name="table">

                    <thead>
                    <tr>
                        <th data-field="estado" data-sorteable="false" data-checkbox="true" ></th>
                        <th data-field="numerotema" data-sorteable="false" data-editable="true" data-editable-type="number" min="1" max="100">Unidad</th>
                        <th data-field="nombre" data-sorteable="false" data-editable="true">Nombre</th>
                    </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>
        <div class="row d-flex flex-row-reverse p-2 m-2">
            <button class="btn btn-primary" button-align="right" type="submit">Guardar</button>
            <a class="btn btn-danger" a-align="right" href="/grupo/temas/{{idgrupo}}" role="button">Cancelar</a>
        </div>
    </form>

</div>

<script src="/js/grid-temas-helper.js"></script>
