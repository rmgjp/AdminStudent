<style>

    .montserrat {
        font-family: 'Montserrat'
    }

    .extra-bold {
        font-family: 'Montserrat';
        font-weight: 800;
        font-size: 10pt;
    }

    .regular p {
        font-family: 'Montserrat';
        font-wight: 400;
        font-size: 9pt;
    }

    #page-container {
        position: relative;
        min-height: 90vh;
    }

    #content-wrap {
        padding-bottom: 2.5rem; /* Footer height */
    }

    #footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 2.5rem; /* Footer height */
    }

</style>
<div id="page-container">
    <div id="content-wrap">
        <header class="container d-print-">
            <div class="row">
                <figure class="col-10">
                    <img style="width: 100%; height: auto;" src="/img/encabezado-left.png" alt="Encabezado">
                </figure>
                <figure class="col">
                    <img style="width: 120%; height: auto;" src="/img/encabezado-right.png" alt="Encabezado">
                </figure>
            </div>
            </figure>
        </header>
        <main class="container d-print-">
            <div class="row m-2 p-2 flex-row-reverse regular">
                <p style="background-color: black; color: white;"> {{fecha}} </p>
                <p> Irapuato, Gto. </p>
            </div>

            <div class="row m-2 p-2 extra-bold" style="text-transform: uppercase">
                {{coordinadorNombre}}<br>
                {{pronombre}} {{carrera}}<br>
                PRESENTE<br>
            </div>
            <div class="row  m-2 p-2 flex-row-reverse extra-bold">
                <p>Asunto: Reporte parcial</p>
            </div>
            <div class="row m-2 p-2 -align-justify regular">
                <p>{{mensaje}}</p>
            </div>
            <div class="row-cols-1 m-2 p-2 regular">
                <h5>Índice de reprobación</h5>
            </div>
            <div class="row-cols-1" style="font-family: 'Montserrat'; font-size: 10pt">
                <div class="col-auto navbar-nav-scroll">
                    <input type="hidden" id="valorTabla" name="valorTabla" value="{{listaFormateada}}">
                    <table id="table" data-toggle="table" data-click-to-select="true" name="table">
                        <thead>
                        <tr>
                            <th data-field="clave" data-sorteable="true">Clave</th>
                            <th data-field="asignatura" data-sorteable="true">Asignatura</th>
                            {{#each temas}}
                                <th data-field="temas.{{@index}}" data-sorteable="true">U{{@index}}</th>
                            {{/each}}
                        </tr>
                        </thead>

                        <tbody>

                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row-cols-1 m-2 p-2 montserrat">

            </div>

            <div class="row-cols-1 m-2 p-2">
                <button id='current' class="btn btn-primary no-print" onclick="print_current_page()">Imprimir</button>
                <a class="btn btn-secondary no-print" href="/">Salir</a>
            </div>
        </main>
    </div>
    <footer class="container d-print-" id="footer">
        <div class="row">
            <figure class="col">
                <img src="/img/footer-left.png" style="height: 40%; width: auto">
            </figure>
            <div class="col montserrat" style="font-size: 8pt">
                <br>
                <br>
                <br>
                Carr. Irapuato – Silao km 12.5 Colonia El Copal,<br>
                Irapuato, Guanajuato<br>
                C.P. 36821 Tels. 462 6967900 y 6067602<br>
                <div class="extra-bold"> tecnm.mx | irapuato.tecnm.mx</div>
                <br>
            </div>
            <figure class="col flex-row-reverse" style="height: 105%; width: auto">
                <img src="/img/footer-right.png">
            </figure>
        </div>

    </footer>
</div>


<script src="/js/llenar-tabla-helper.js" type="text/javascript"></script>

<script type="text/javascript">
    function print_current_page() {
        window.print();
    }
</script>
