<title>Datos del nuevo grupo - Seguimiento de Estudiantes</title>

<div class="container p-5 bg-light">
    <!-- Secci贸n de declaraci贸n de errores. -->
    {{#each errors}}
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            {{text}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {{/each}}


    <!-- Cuerpo del archivo -->
    <h2 class="display-6">Datos del grupo</h2>
    <div class="row">
        <div class="col">
            <img src="/img/0.jpeg" class="img-fluid" alt="" id="vistaImagen"
                 style="object-fit: none; object-position: center; width: 100%; max-height: 250px; margin-bottom: 1rem;">
        </div>
    </div>
    <form class="needs-validation" action="/grupo/crear-grupo/{{archivo}}" method="POST" novalidate>
        <div class="row">
            <div class="col">
                <label for="asignatura" class="form-label">Asignatura</label>
                <input type="text" class="form-control" name="asignatura" id="asignatura" required
                       value="{{datos.materia}}">
            </div>
        </div>

        <div class="row">
            <div class="col">
                <label for="clave" class="form-label">Clave</label>
                <input type="text" class="form-control" name="clave" id="clave" required value="{{datos.grupo}}">
            </div>
            <div class="col">
                <label for="periodo" class="form-label">Periodo</label>
                <input type="text" class="form-control" name="periodo" id="periodo" placeholder="Ej. ENE-JUN-2021"
                       required value="{{datos.periodo}}">
            </div>
            <div class="col">
                <label for="estado" class="form-label">Estado</label>
                <select class="form-select custom-select" id="estado" name="estado" required>
                    <option value=1>Activo</option>
                    <option value=0>Inactivo</option>
                </select>
            </div>
            <div class="col">
                <label for="imagen" class="form-label">Imagen</label>
                <select class="form-select custom-select" id="imagen" name="imagen" required>
                    <option value=0>Calculadora</option>
                    <option value=1>C贸digo</option>
                    <option value=2>Laboratorio</option>
                    <option value=3>Herramienta</option>
                    <option value=4>Avi贸n</option>
                    <option value=5>Robot</option>
                </select>
            </div>
        </div>

        <div class="row ">
            <div class="col d-flex flex-row-reverse p-2 m-2">

                <button class="btn btn-primary" type="submit">Siguiente</button>

                <a class="btn btn-outline-primary" href="/grupo/crear-grupo">
                    Limpiar
                </a>
                <a class="btn btn-danger align-right" href="/" role="button">Cancelar</a>
            </div>
        </div>
    </form>
</div>

<script>
    document.getElementById('imagen').onchange = function () {
        const imagen = {
            0: '/img/0.jpeg',
            1: '/img/1.jpeg',
            2: '/img/2.jpeg',
            3: '/img/3.jpeg',
            4: '/img/4.jpeg',
            5: '/img/5.jpeg'
        }

        document.getElementById('vistaImagen').src = imagen[parseInt(document.getElementById('imagen').value)];
        console.log(imagen[parseInt(document.getElementById('imagen').value)]);
    }
</script>

