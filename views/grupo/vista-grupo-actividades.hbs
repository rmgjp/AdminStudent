<div class="container-fluid p-2 bg-light">
    <!-- Barra de navegación -->
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link " aria-current="page" href="/grupo-inicio/{{idgrupo}}">Inicio</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="/grupo/alumnos/{{idgrupo}}"><i class="bi bi-people-fill"></i> Alumnos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/grupo/temas/{{idgrupo}}"><i class="bi bi-book-fill"></i> Temas</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" href="/grupo/actividades/{{idgrupo}}"><i class="bi bi-bookmark-check-fill"></i>
                Actividades</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="/grupo/calificaciones/{{idgrupo}}"><i class="bi bi-file-spreadsheet-fill"></i>
                Calificaciones</a>
        </li>
    </ul>
    <!-- Titulo de la vista -->
    <div class="row m-2 p-2">
        <h2 class="">Actividades</h2>
    </div>
    <div class="row m-2 p-2">
        <a class="btn btn-info m-1" href="/grupo/actividades/{{idgrupo}}"><i class="bi bi-book-half"></i> Todas</a>
        {{#each temas}}
            <a class="btn btn-info m-1" href="/grupo/actividades/{{../idgrupo}}/{{dataValues.id}}"><i
                    class="bi bi-book-half"></i> {{dataValues.nombre}}</a>
        {{/each}}
    </div>

    <div class="row m-2 p-2">
        <div class="col-5">
            <div class="list-group">
                {{#each actividades}}
                    <a class="list-group-item list-group-item-action"
                       href="/grupo/actividades/{{../idgrupo}}/{{../idtema}}/{{dataValues.id}}"><i
                            class="bi bi-bookmark-fill"></i> {{dataValues.nombre}}</a>
                {{else}}
                    <a class="list-group-item list-group-item-action disabled">El tema no tiene actividades
                        asignadas</a>
                {{/each}}
                {{#iflogico idtema '!=' ''}}
                    <a class="list-group-item list-group-item-action"
                       href="/actividad/nueva-actividad/{{idgrupo}}/{{idtema}}"><i class="bi bi-bookmark-plus-fill"></i>
                        Nueva Actividad</a>
                {{else}}
                    <a class="list-group-item" data-toggle="popover" title="Información"
                       data-content="Seleccione un tema para agregar actividades."><i
                            class="bi bi-bookmark-plus-fill"></i> Nueva Actividad</a>
                {{/iflogico}}
            </div>
        </div>
        <div class="col">
            <div class="container bg-white">
                {{#if actividad}}
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col">
                                    <h4>Datos de la actividad</h4>
                                </div>
                                <div class="col-11" align="right">
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" id="switchEditar">
                                        <label class="custom-control-label" for="switchEditar">Editar</label>
                                    </div>
                                </div>
                                <div class="col" align="right">
                                    <a class="bi bi-trash-fill" data-toggle="modal"
                                       data-target="#eliminarActividadModal"></a>
                                </div>
                            </div>

                        </div>
                        <!--Inicio Form -->
                        <form action="/grupo/actividades/{{idgrupo}}/{{idtema}}/{{actividad.dataValues.id}}?_method=PUT" method="POST" novalidate>
                            <input type="hidden" name="_method" value="PUT">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <label for="nombre" class="form-label">Nombre</label>
                                        <input type="text" class="form-control" id="nombre" name="nombre"
                                               disabled value="{{actividad.dataValues.nombre}}">
                                    </div>
                                    <div class="col">
                                        <label for="valor">Valor</label>
                                        <input type="number" min="1" max="100" class="form-control" id="valor"
                                               name="valor"
                                               disabled value="{{actividad.dataValues.valor}}">
                                    </div>
                                    <div class="col">
                                        <div class="col">
                                            <label for="tipoBox" class="form-label">Categoría</label>
                                            <select class="custom-select" name="tipoBox" disabled id="tipoBox">
                                                {{#select tipoActividad}}
                                                    <option value="Investigación">Investigación</option>
                                                    <option value="Presentación">Presentación</option>
                                                    <option value="Proyecto">Proyecto</option>
                                                    <option value="Reporte / Práctica">Reporte / Práctica</option>
                                                    <option value="Resumen">Resumen</option>
                                                    <option value="Mapa Conceptual">Mapa Conceptual</option>
                                                    <option value="Cuadro Sinoptico">Cuadro Sinoptico</option>
                                                    <option value="Mapa Mental">Mapa Mental</option>
                                                    <option value="Ejercicios">Ejercicios</option>
                                                    <option value="Otros">Otros</option>
                                                {{/select}}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row m-0 p-0">
                                    <label for="descripcion">Descripción</label>
                                    <textarea type="text" class="form-control"
                                              disabled id="descripcion"
                                              name="descripcion">{{actividad.dataValues.descripcion}}</textarea>
                                </div>
                            </div>
                            <!-- Modal para verificar la edición-->
                            <div class="modal fade" id="editarActividadModal" tabindex="-1"
                                 aria-labelledby="editarActividadModal" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="editarActividadModalLabel">Editar actividad</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            ¿Está seguro que desea editar la actividad?
                                        </div>
                                        <div class="modal-footer">
                                            <a class="btn btn-secondary" data-dismiss="modal">No</a>
                                            <button type="submit" class="btn btn-primary">Sí</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!--Cierre Form -->
                        </form>
                        <div class="card-footer">
                            <div class="align-content-md-end">
                                <a class="btn btn-outline-primary" type="button" name="calificar" id="calificar"
                                   data-toggle="modal" data-target="#calificarModal">Calificar</a>
                                <button class="btn btn-primary" type="submit" name="guardar" id="guardar" data-toggle="modal" disabled
                                   data-target="#editarActividadModal">Guardar</button>
                            </div>
                        </div>
                    </div>
                {{else}}
                    <h2>Seleccione una actividad para mostrar más información.</h2>
                {{/if}}
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="calificarModal" tabindex="-1" aria-labelledby="calificarModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="calificarModalLabel">Calificar actividad</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Seleccione la forma en la que desea calificar la actividad.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary">Individual</button>
                    <button type="button" class="btn btn-primary">Por equipo</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="eliminarActividadModal" tabindex="-1" aria-labelledby="eliminarActividadModal"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="eliminarActividadModalLabel">Eliminar actividad</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ¿Está seguro que desea eliminar la actividad? Se eliminará permanentemente.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-danger">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.getElementById('switchEditar').onclick = function () {
        if ($(this).is(':checked')) {
            document.getElementById('nombre').disabled = false;
            document.getElementById('valor').disabled = false;
            document.getElementById('descripcion').disabled = false;
            document.getElementById('tipoBox').disabled = false;
            document.getElementById('guardar').disabled = false;
        } else {
            document.getElementById('nombre').disabled = true;
            document.getElementById('valor').disabled = true;
            document.getElementById('descripcion').disabled = true;
            document.getElementById('tipoBox').disabled = true;
            document.getElementById('guardar').disabled = true;
        }
    }

</script>